{
  "name": "@adobe/aem-boilerplate-commerce",
  "private": true,
  "version": "4.0.1",
  "description": "Starter project for Adobe Commerce on Edge Delivery Services",
  "scripts": {
    "lint:js": "eslint .",
    "lint:css": "stylelint \"blocks/**/*.css\" \"styles/*.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "watch:css": "sass --watch styles:styles blocks:blocks components:components --no-source-map",
    "build:css": "sass styles:styles blocks:blocks --no-source-map && postcss styles/**/*.css blocks/**/*.css --replace && npm run lint:css -- --fix",
    "start": "aem up",
    "install:dropins": "node build.mjs && node postinstall.js",
    "postinstall": "npm run install:dropins",
    "postupdate": "npm run install:dropins",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hlxsites/aem-boilerplate-commerce.git"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/hlxsites/aem-boilerplate-commerce/issues"
  },
  "homepage": "https://github.com/hlxsites/aem-boilerplate-commerce#readme",
  "devDependencies": {
    "@adobe/aem-cli": "^16.5.8",
    "@babel/eslint-parser": "7.28.5",
    "@dropins/build-tools": "1.0.1",
    "autoprefixer": "^10.4.22",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.32.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-discard-comments": "^7.0.5",
    "postcss-scss": "^4.0.9",
    "postcss-sort-media-queries": "^5.2.0",
    "postcss-sorting": "^9.1.0",
    "sass": "^1.94.2",
    "stylelint": "16.25.0",
    "stylelint-config-standard": "39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1"
  },
  "dependencies": {
    "@adobe/adobe-client-data-layer": "^3.0.1",
    "@adobe/magento-storefront-event-collector": "^1.15.0",
    "@adobe/magento-storefront-events-sdk": "^1.15.0",
    "@dropins/storefront-account": "~1.2.0",
    "@dropins/storefront-auth": "~2.1.5",
    "@dropins/storefront-cart": "~1.5.1",
    "@dropins/storefront-checkout": "~2.1.0",
    "@dropins/storefront-order": "~1.4.0",
    "@dropins/storefront-payment-services": "~1.0.3",
    "@dropins/storefront-pdp": "~1.3.5",
    "@dropins/storefront-personalization": "~1.0.1",
    "@dropins/storefront-product-discovery": "~2.1.0",
    "@dropins/storefront-recommendations": "~1.1.1",
    "@dropins/storefront-wishlist": "~2.0.1",
    "@dropins/tools": "~1.5.3",
    "crypto-js": "^4.2.0"
  }
}
